package tontada;

public class main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String cadena = "zxzx";
		String busqueda = "zx";
		int contador=0;
		int ind;
		for(ind = 0;ind != -1;){
			ind = cadena.indexOf(busqueda, ind);
			if(ind!=-1){
				ind+=1;
				contador++;
			}
		}
		int errores=cadena.length() -contador*2;
		System.out.println(contador);
		System.out.println(errores);
	}

}
