
public class Empleado {
	final static protected String nombreEmpresa = "Eléctrica, SA";
	static double sueldoBase = 1000;
	String nombre;
	int edad;
	int porcentajeIncremento;
	double sueldoFinal;

	Empleado() {
		nombre = "";
		edad = 0;
		porcentajeIncremento = 0;
		sueldoFinal = sueldoBase;

	}

	Empleado(String nombre, int edad, int porcentajeIncremento) {
		this.nombre = nombre;
		this.edad = edad;
		this.porcentajeIncremento = porcentajeIncremento;
		sueldoFinal = (sueldoBase * ((100 + porcentajeIncremento) / 100));
	}

	@Override
	public String toString() {
		return nombreEmpresa+"\nEmpleado:" + nombre+" " + edad + " años " + sueldoFinal + "€.";
	}

	public static void setSueldoBase(int sueldoBase) {
		Empleado.sueldoBase = sueldoBase;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public void setEdad(int edad) {
		this.edad = edad;
	}

	public void setPorcentajeIncremento(int porcentajeIncremento) {
		this.porcentajeIncremento = porcentajeIncremento;
	}

}
